{
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "./dist",
    "target": "ES2022",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "declaration": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "listFiles": false,
    "newLine": "LF",
    "noEmitOnError": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": ["**/node_modules", "**/dist"]
}